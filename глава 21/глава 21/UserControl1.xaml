<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:s="clr-namespace:System;assembly=mscorlib"
Height="162" Width="283">
    <!--размеры окна-->
    <StackPanel.Resources>
        <s:Double x:Key="fontsizeLarge">18.7</s:Double>
        <!--размер шрифта-->
<s:Double x:Key="fontsizeSmall">14.7</s:Double>
</StackPanel.Resources>
<Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24"> <!--расположение верхней кнопки-->
        <Button.FontSize>
            <StaticResource ResourceKey="fontsizeLarge" />
        </Button.FontSize> Button with large FontSize
        </Button>
        <!--название кнопки-->
       <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24" FontSize="{StaticResource fontsizeSmall}" >
            <!--расположение нижней кнопки-->
Button with small FontSize
        </Button>
        <!--название-->
</StackPanel> 